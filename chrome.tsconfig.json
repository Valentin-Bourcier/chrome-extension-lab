{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./chromescripts",
        "outDir": "./dist/chrome-extension-lab",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": false,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2017",
        "module": "es2020",
        "lib": ["es2020", "dom"]
    },
    "files": ["chromescripts/background.ts", "chromescripts/contentscript.ts"],
    "exclude": ["src/**/*.d.ts"]
}
